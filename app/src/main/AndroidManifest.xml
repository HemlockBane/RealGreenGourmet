<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.greengourmet">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CuisineActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/cuisine_name">
        </activity>

        <activity android:name=".IngredientsActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/ingredient_name">
        </activity>


        <activity
            android:name=".MarketActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/market_name">
        </activity>


    </application>

</manifest>