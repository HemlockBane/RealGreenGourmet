<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.greengourmet.DirectionActivity">


    <ImageView
        android:id="@+id/the_way"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/the_way" />

    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="30dp"
        android:textColor="@color/color_white"
        android:textSize="22sp" />


    <ImageView
        android:id="@+id/direction_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:padding="24dp"
        android:src="@drawable/ic_directions_white_24dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/direction_icon"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:padding="24dp"
        android:src="@drawable/ic_favorite_border_white_24dp" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/the_way"
        android:layout_marginTop="22dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/bike_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/ic_directions_bike_teal_600_24dp"


            />


        <ImageView
            android:id="@+id/walk_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/ic_directions_walk_teal_600_24dp" />

        <ImageView
            android:id="@+id/drive_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/ic_directions_car_teal_600_24dp" />
    </LinearLayout>


</RelativeLayout>
